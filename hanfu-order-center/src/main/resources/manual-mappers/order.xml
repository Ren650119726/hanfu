<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanfu.order.center.manual.dao.OrderDaoImpl">
<resultMap type="com.hanfu.order.center.model.HfOrderLogistics" id="ResultMap">
     <id column="id" jdbcType="INTEGER" property="id" />
    <result column="orders_id" jdbcType="INTEGER" property="ordersId" />
    <result column="order_detail_id" jdbcType="INTEGER" property="order_detail_id" />
    <result column="uuser_id" jdbcType="INTEGER" property="uuser_id" />
    <result column="user_address_id" jdbcType="INTEGER" property="user_address_id" />
    <result column="googs_id" jdbcType="INTEGER" property="googs_id" />
    <result column="logistics_order_name" jdbcType="VARCHAR" property="logistics_order_name" />
    <result column="resp_id" jdbcType="INTEGER" property="resp_id" />
    <result column="logistics_orders_id" jdbcType="VARCHAR" property="logistics_orders_id" />
    <result column="logistics_company" jdbcType="VARCHAR" property="logistics_company" />
    <result column="hf_desc" jdbcType="VARCHAR" property="hf_desc" />
    <result column="create_time" jdbcType="TIMESTAMP" property="create_time" />
    <result column="modify_time" jdbcType="TIMESTAMP" property="modify_time" />
    <result column="last_modifier" jdbcType="VARCHAR" property="last_modifier" />
    <result column="is_deleted" jdbcType="SMALLINT" property="is_deleted" />
</resultMap>

<select id="selectOrderList" resultMap= "ResultMap">
     SELECT 
        h.id,h.ordersId,h.resp_id,h.uuser_id,
        h.order_detail_id,h.googs_id,h.user_address_id,
        h.logistics_order_name, 
        h.logistics_orders_id,h.logistics_company,
        h.hf_desc,h.create_time,
        h.modify_time,h.last_modifier,h.is_deleted
     FROM 
        hf_order_logistics h
     LEFT JOIN
        hf_orders h2
     ON h.ordersId = h2.id
     LEFT JOIN
        hf_orders_detail  h3
     ON   h.order_detail_id = h3.id
     LEFT JOIN 
        hf_user h4
     ON   h.uuser_id = h4.id
     LEFT JOIN
        hf_goods h5
     ON   h.googs_id = h5.id
     LEFT JOIN
        hf_resp h6
     ON h.resp_id = h6.id
     LEFT JOIN
        hf_user_address h7
     ON h.user_address_id =h7.id    
     WHERE h.id = #{id};
</select>
</mapper>