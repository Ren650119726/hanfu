        <result column="pay_status" jdbcType="INTEGER" property="payStatus"/>
        <result column="real_name" jdbcType="VARCHAR" property="realName"/>
    </resultMap>
    <select id="selectOrderDetail" resultMap="Map">
	SELECT
	*
	FROM
	hf_order_logistics b
	LEFT JOIN hf_orders a ON a.id = b.orders_id
	LEFT
	JOIN hf_orders_detail c ON b.order_detail_id = c.id
	LEFT JOIN hf_user d
	ON b.user_id = d.id
	WHERE
	c.orders_id = 1
    </select>

</mapper>