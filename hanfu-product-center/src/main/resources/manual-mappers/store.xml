<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanfu.product.center.manual.dao.StoreDaoImpl">
	<resultMap id="BaseResultMap" type="com.hanfu.product.center.model.HfStone">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="hf_name" jdbcType="VARCHAR" property="hfName" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="hf_desc" jdbcType="VARCHAR" property="hfDesc" />
    <result column="boss_id" jdbcType="INTEGER" property="bossId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="失效时间" jdbcType="TIMESTAMP" property="失效时间" />
    <result column="hf_status" jdbcType="INTEGER" property="hfStatus" />
    <result column="是否失效" jdbcType="SMALLINT" property="是否失效" />
  </resultMap>
  
  <select id="selectStoreById" resultMap="BaseResultMap">
  		SELECT 
  			distinct h.id, h.hf_name,
  		    h.user_id, h.hf_desc,
   		    h.boss_id, h.create_time,
            h.失效时间, h.hf_status,
            h. 是否失效
    	    FROM
    	    	 hf_stone h
    	    LEFT JOIN 
    	    	 product_instance p
    	    ON  h.id = p.stone_id
    	    WHERE h.id = #{productId}
  </select>
</mapper>